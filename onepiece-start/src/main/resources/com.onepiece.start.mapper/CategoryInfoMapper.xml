<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.onepiece.start.mapper.CategoryInfoMapper">
    <select id="getCategoryList" resultType="com.onepiece.common.pojo.CategoryInfo">
        select *
        from category_info
        where is_delete = 0
    </select>

    <insert id="addCategory" parameterType="com.onepiece.common.pojo.CategoryInfo"
            useGeneratedKeys="true" keyProperty="categoryId" keyColumn="category_id">
        INSERT INTO `onepiece`.`category_info`(`category_name`, `description`, `is_delete`, `status`,
                                               `create_time`)
        VALUES (#{categoryName}, #{description}, #{isDelete}, #{status},
                #{createTime});
    </insert>
</mapper>
